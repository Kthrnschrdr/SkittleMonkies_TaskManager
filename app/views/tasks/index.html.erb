<% if current_user %>
<h2><%= current_user.username.capitalize %>'s Tasks</h2>
	<ul class="sortable">
		<% current_user.tasks.each do |t| %>
     	<li><%= link_to(t.task_name, task_path(t.id))  %></li>
		<!-- <p>Category:<%# t.category %>, Project:<%# t.project %>, <%# t.status %></p> -->
    	<% end %>
	</ul>
	<script src="jquery.sortable.min.js"></script>
	<script>
    $('.sortable').sortable();
	</script>
<% else %>
	<p><%= "No Tasks" %></p>  
<% end %>
