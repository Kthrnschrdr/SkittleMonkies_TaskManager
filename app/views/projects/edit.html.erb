<div id= 'leftColumn'>
  <ul>
  	<li><%= link_to("New Task", new_task_path) %></li>
  	<li><%= link_to("Create Category", add_category_path) %></li>
  	<li><%= link_to "Tasks", tasks_path %></li>
  	<li><%= link_to "Projects", projects_path %></li>
  </ul>
</div>

<div id= 'feature'>
	<h2>Edit Project</h2>
	<%= form_for @project do |f| %>
 	   <p><%= f.text_field :title, :placeholder => "Project Name" %></p>
	   <p><%= f.text_area :description, :placeholder => "Project Description" %></p>
	   <p><%= f.submit "Edit Project", :class => 'submit'%></p>
	<% end %>

	<p><%= link_to "Create new tasks for this project", new_task_path %></p>
</div>

