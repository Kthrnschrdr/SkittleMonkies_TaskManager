<div id= 'leftColumn'>
  <ul>
  	<li><%= link_to("New Task", new_task_path) %></li>
  	<li><%= link_to("Create Category", add_category_path) %></li>
  	<li><%= link_to "Tasks", tasks_path %></li>
  	<li><%= link_to "Projects", projects_path %></li>
  </ul>
</div>

<div id="feature">
	<h2><%= @project.title %></h2>
	<p><%= @project.description %></p>
	<% if @tasks != nil %>
		<p>Tasks Associated with this Project:</p>
		<% @tasks.each do |t| %>
			<p><%= link_to(t.task_name, task_path(t.id))  %></p>
		<% end %>
	<% end %>
	<p><%= link_to "Edit this Project", edit_project_path(@project.title) %></p>
	<p><%= link_to "Create new tasks for this project", new_task_path %></p>
</div>